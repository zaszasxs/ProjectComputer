<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:padding="10dp"
      android:background="@drawable/sharp_rect1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

  </RelativeLayout>

  <ImageView
      android:id="@+id/icon_login"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:background="@drawable/sharp_cir1"
      android:layout_marginTop="60dp"
      android:layout_marginBottom="50dp"
      android:src="@drawable/ic_account_pirple_24dp"
      android:layout_centerHorizontal="true"/>

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/etemail"
      android:padding="10dp"
      android:layout_below="@+id/icon_login"
      android:hint="อีเมล"
      android:drawableStart="@drawable/ic_mail_gray_24dp"
      android:drawablePadding="5dp"
      android:layout_margin="5dp"
      android:inputType="textEmailAddress"
      android:background="@drawable/sharp_rect2" />
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/etpassword"
      android:padding="10dp"
      android:layout_below="@+id/etemail"
      android:hint="รหัสผ่าน"
      android:drawableStart="@drawable/ic_lock__gray_24dp"
      android:drawablePadding="5dp"
      android:layout_margin="5dp"
      android:inputType="textPassword"
      android:background="@drawable/sharp_rect2" />

  <TextView
      android:id="@+id/txforgot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ลืมรหัสผ่าน ?"
      android:layout_margin="5dp"
      android:layout_below="@id/etpassword"
      android:layout_alignParentRight="true"/>

  <Button
      android:id="@+id/btnlogin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/txforgot"
      android:layout_centerHorizontal="true"
      android:text="เข้าสู่ระบบ"
      style="@style/Widget.AppCompat.Button.Colored"
      android:background="@drawable/sharp_cir1"
      android:textColor="@color/colorPrimary"
      android:minWidth="128dp"/>


  <TextView
      android:id="@+id/txareu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/btnlogin"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="5dp"
      android:layout_marginTop="212dp"
      android:layout_marginEnd="5dp"
      android:layout_marginRight="150dp"
      android:layout_marginBottom="5dp"
      android:text="ลงทะเบียนในระดับของ ?"
      android:textSize="20dp" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true">
    <TextView
        android:id="@+id/txnoaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เจ้าของเครื่อง"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txregisbuyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txnoaccount"
        android:textColor="@color/yellow"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="ผู้รับซื้อ"
        android:layout_gravity="center"/>
  </LinearLayout>


</RelativeLayout>