<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/probuyerIv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_smart_trash"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_gray_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:id="@+id/Rl1"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/btnnext"
            android:layout_toEndOf="@+id/probuyerIv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txmechanic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="ชื่อเครื่อง :  "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/deletebtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete_24dp"
                android:layout_alignParentEnd="true"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/editbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit_yellow_24dp"
                android:layout_toStartOf="@+id/deletebtn"
                android:background="@null"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="4dp"
            android:layout_below="@+id/Rl1"
            android:layout_toStartOf="@+id/btnnext"
            android:layout_toEndOf="@+id/probuyerIv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txplastic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text=" :  "
                android:drawableStart="@drawable/ic_water_mini2"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txmetal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_toRightOf="@+id/txplastic"
                android:text=" :  "
                android:drawableStart="@drawable/ic_soda_mini2"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txglass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_toRightOf="@+id/txmetal"
                android:text=" :  "
                android:drawableStart="@drawable/ic_beer_bottle_mini2"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imerror"
                android:src="@drawable/ic_error_outline_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"/>



        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>